{
  "openapi": "3.0.0",
  "info": {
    "title": "API toDoList",
    "description": "API para uma lista de tarefas",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "URL de teste"
    }
  ],
  "paths": {
    "/tarefas/": {
      "get": {
        "summary": "lista todas as tarefas",
        "description": "Rota responsável por listar todas as tarefas",
        "tags": ["Tarefas"],
        "responses": {
          "206": {
            "description": "Não existe tarefas cadastradas!"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Tarefas"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Cadastrar uma nova tarefa",
        "description": "Rota responsável por cadastrar uma tarefa",
        "tags": ["Tarefas"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Tarefas"
              },
              "examples": {
                "Tarefas": {
                  "value": {
                    "tarefa": "Definir tarefa",
                    "descricao": "Uma descrição da tarefa",
                    "situacao": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Envie todos os campos"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Tarefas"
                }
              }
            }
          }
        }
      }
    },
    "/tarefas/{id}": {
      "get": {
        "summary": "Busca uma tarefa por ID",
        "description": "Rota responsável por buscar uma tarefa pelo seu ID",
        "tags": ["Tarefas"],
        "parameters":[
          {
            "name": "id",
            "in": "path",
            "description": "Id da tarefa para a busca",
            "required": true
          }
        ],
        "responses": {
          "400":{
            "description": "ID inválido!"
          },
          "204":{
            "description": "Tarefa não encontrada com esse ID!"
          },
          "200":{
            "description": "OK!",
            "content":{
              "application/json":{
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Tarefas"
                }
              }
            }
          }
        }
      },
     "put": {
        "summary": "Editar uma tarefa pelo ID",
        "description": "Rota responsável por editar uma tarefa pelo ID",
        "tags": ["Tarefas"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da tarefa para a busca",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref":"#/components/schemas/Tarefas"
              },
              "examples": {
                "Paleta": {
                  "value": {
                    "tarefa": "Maracujá Editado",
                    "descricao": "Paleta de Maracujá editado",
                    "situacao": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "ID Inválido ou Envie o todos os campos da tarefa!"
          },
          "206": {
            "description": "Tarefa não encontrada com esse id!"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref":  "#/components/schemas/Tarefas"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Apagar uma Tarefa pelo ID",
        "description": "Rota responsável por apagar uma Tarefa pelo ID",
        "tags": ["Tarefas"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da Tarefa para a deleção",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "ID Inválido!"
          },
          "206": {
            "description": "Tarefa não encontrada com esse id!"
          },
          "200": {
            "description": "Tarefa deletada!"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Tarefas": {
        "type": "object",
        "properties": {
          "tarefa": {
            "type": "string"
          },
          "descricao": {
            "type": "string"
          },
          "situacao": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
